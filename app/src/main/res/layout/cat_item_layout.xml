<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".views.activities.GettingStartedActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
            <ImageView
                android:id="@+id/imDesign"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/home_deco"
                android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:background="@drawable/rectangular_border_no_fill"
            android:weightSum="2">
            <com.ctrlplusz.anytextview.AnyTextView
                android:id="@+id/tvCategoryName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="16dp"
                android:text="Bedroom Deco"
                android:ellipsize="end"
                android:singleLine="true"
                android:textSize="12sp"
                android:layout_weight="1.6"
                android:textColor="@color/colorPrimary"
                android:layout_marginBottom="5dp"
                app:typeface="FontsFree-Net-SFProText-Bold.ttf" />
           <ImageView
               android:layout_width="0dp"
               android:layout_height="30dp"
               android:layout_weight="0.4"
               android:layout_marginRight="16dp"
               android:layout_marginTop="5dp"
               android:padding="5dp"
               android:src="@drawable/heart"/>

        </LinearLayout>
    </LinearLayout>
</layout>